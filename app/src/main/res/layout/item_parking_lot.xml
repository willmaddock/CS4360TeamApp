<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/parking_lot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_lot_name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parking_lot_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost_0_0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/parking_lot_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_0_0"
        android:textSize="14sp" />

    <!-- Added Proximity TextView -->
    <TextView
        android:id="@+id/parking_lot_proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximity: 0 ft"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

</LinearLayout>