<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/petitionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe your petition"
        android:inputType="textMultiLine"
        android:lines="4" />

    <EditText
        android:id="@+id/gracePeriodSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Suggest a grace period (optional)"
        android:inputType="text" />

    <Button
        android:id="@+id/submitPetitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Petition"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>