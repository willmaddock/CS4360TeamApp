<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/drawer_background"
    android:layout_marginBottom="8dp"
    tools:ignore="VisualLintBounds">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <!-- Venue Name -->
    <TextView
        android:id="@+id/venueNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp"
        tools:ignore="HardcodedText" />

    <!-- Venue Address -->
    <TextView
        android:id="@+id/venueAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText" />

    <!-- City and State -->
    <TextView
        android:id="@+id/venueCityStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City, State"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText" />

    <!-- Ball Arena static entry -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ball Arena - Prius West Lot"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <!-- Map Fragment for displaying the map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="FragmentTagUsage" />

    <!-- ListView for displaying nearby parking lots -->
    <ListView
        android:id="@+id/parkingListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:textColor="@android:color/white" />
</LinearLayout>