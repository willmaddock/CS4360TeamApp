<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to show the selected cost -->
    <TextView
        android:id="@+id/selectedCostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Cost: $0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- SeekBar for cost filtering -->
    <SeekBar
        android:id="@+id/costSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0" />

    <!-- RecyclerView for displaying the filtered parking lots (if applicable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parkingLotRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" /> <!-- Make visible if displaying parking lots -->

</LinearLayout>